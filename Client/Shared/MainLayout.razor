@inherits LayoutComponentBase
@implements IDisposable
@using App_Indice_Glucemico.Client.Services
@inject AuthService AuthService
@inject NavigationManager Navigation

<div class="main-layout">
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-chart-line me-2"></i>
                Índice Glucémico
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (isAuthenticated && currentUser != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user me-2"></i>
                                @currentUser.Nombre
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-user-circle me-2"></i>Mi Perfil</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="#" @onclick="HandleLogout" @onclick:preventDefault>
                                        <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/login">
                                <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">
                                <i class="fas fa-user-plus me-2"></i>Registrarse
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    @Body
</div>

@code {
    private bool isAuthenticated = false;
    private UsuarioInfo? currentUser;

    protected override async Task OnInitializedAsync()
    {
        await LoadUserAsync();
        AuthService.OnAuthStateChanged += OnAuthStateChanged;
    }

    private async Task LoadUserAsync()
    {
        currentUser = await AuthService.GetCurrentUserAsync();
        isAuthenticated = AuthService.IsAuthenticated;
        StateHasChanged();
    }

    private async void OnAuthStateChanged()
    {
        await LoadUserAsync();
    }

    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/");
    }

    public void Dispose()
    {
        AuthService.OnAuthStateChanged -= OnAuthStateChanged;
    }
}
